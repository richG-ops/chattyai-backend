# üöÄ TheChattyAI Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# ====================================
# üîó BACKEND API CONFIGURATION
# ====================================

# Your backend API URL (change to your actual Render URL)
NEXT_PUBLIC_API_URL=https://your-backend-app.onrender.com

# JWT token for API authentication (get from your backend)
NEXT_PUBLIC_JWT_TOKEN=your-jwt-token-here
CALENDAR_API_JWT_TOKEN=your-jwt-token-here

# ====================================
# üîê NEXTAUTH CONFIGURATION
# ====================================

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth URL (change to your actual domain)
NEXTAUTH_URL=https://your-frontend-app.vercel.app

# ====================================
# üéØ GOOGLE OAUTH (if using Google login)
# ====================================

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ====================================
# üìä ANALYTICS & TRACKING
# ====================================

# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ====================================
# üåê DEPLOYMENT CONFIGURATION
# ====================================

# Environment (development, staging, production)
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# ====================================
# üé™ DEMO MODE (for testing)
# ====================================

# Set to 'true' to use demo data instead of real API calls
NEXT_PUBLIC_DEMO_MODE=false

# ====================================
# üîß OPTIONAL CONFIGURATIONS
# ====================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# Vercel Analytics (optional)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id 